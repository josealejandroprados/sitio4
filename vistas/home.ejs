<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <h1>Home</h1>

    <div class="container">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="tabla">
                <thead>
                    <tr>
                        <th>n</th>
                        <th>Nombre</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                    <% if(data) { %>
                        <% for(var i=0; i<data.length; i++){ %>
                            <% var id = data[i].id_usuario %>
                            <tr onclick="getI(<%=id%>,<%=i%>)">
                                <td><%= (i+1) %></td>
                                <td><%= data[i].nombre %></td>
                                <td><%= data[i].email %></td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <footer>
        <div class="container mb-5">
            <div class="row">
                <div class="col-10">
                    <button type="button" class="btn btn-primary" id="btnNuevo">Nuevo</button>
                    <button type="button" class="btn btn-success" id="btnModificar">Modificar</button>
                    <button type="button" class="btn btn-danger" id="btnEliminar">Eliminar</button>
                </div>
                
                <div class="col-2">
                    <a href="/salir" class="btn btn-secondary" id="btnSalir">Salir</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="home.js"></script>
</body>
</html>